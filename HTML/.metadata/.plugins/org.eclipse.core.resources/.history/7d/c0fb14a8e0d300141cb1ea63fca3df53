@pi=Math::PI


class Area
      def self.new(shape)
        if shape=='Circle'
            puts "input r"
            r=gets.chomp
            Circle.new(r)
        end
      end
end

class Circle
      initialize(r)
        @area=r*r*@pi
      end
      return @area
end


example=Area.new('Circle')
p example.area