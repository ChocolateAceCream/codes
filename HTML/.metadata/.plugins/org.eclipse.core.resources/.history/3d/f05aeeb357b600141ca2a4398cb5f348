class Eco_system


#  array = Array.new(system_size)
 
  def get_input
      puts"Please input the size of eco-system => "
      @system_size=gets
      puts"Please input the initial number of bears in the system => "
      @initial_number_of_bear = gets
      puts"Please input the initial number of bears in the system => "
      @initial_number_of_fish = gets
      while @initial_number_of_fish+@initial_number_of_bear>@system_size 
              system ("cls")
              puts "wrong input, try one more time"
              puts"Please input the size of eco-system => "
              @system_size=gets
              puts"Please input the initial number of bears in the system => "
              @initial_number_of_bear = gets
              puts"Please input the initial number of bears in the system => "
              @initial_number_of_fish = gets
      end
        
      
  end
  
  def output
      puts @initial_number_of_bear
      puts @initial_number_of_fish
      puts @system_size
      
  end

end

test = Eco_system.new
test.get_input
test.output

    