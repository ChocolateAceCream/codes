class File
def self.open_and_process(*args)
f = File.open(*args)
yield f
f.close()
end
end
File.open_and_process("blocks.rb", "r") do |file|
while line = file.gets
puts line
end
end

class ProcExample
def pass_in_block(&action)
@stored_proc = action
end
def use_proc(parameter)
@stored_proc.call(parameter)
end
end

eg = ProcExample.new
eg.pass_in_block { |param| puts "The parameter is #{param}" }
eg.use_proc(99)