<Window x:Class="MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Word Counter" Height="300" Width="442">
    <Grid>
        <Label Content="Enter some text for counting:" HorizontalAlignment="Left" Margin="8,8,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtWords" HorizontalAlignment="Left" Margin="13,34,13,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Height="190" Width="395" VerticalScrollBarVisibility="Visible" AcceptsReturn="True"/>
        <RadioButton x:Name="radCountChars" Content="Chars" HorizontalAlignment="Left" Margin="13,237,0,0" VerticalAlignment="Top" IsChecked="True"/>
        <RadioButton x:Name="radCountWords" Content="Words" HorizontalAlignment="Left" Margin="89,237,0,0" VerticalAlignment="Top"/>
        <Label Content="The results are:" HorizontalAlignment="Left" Margin="160,231,0,0" VerticalAlignment="Top"/>
        <Label x:Name="lblResults" Content="" HorizontalAlignment="Left" Margin="254,232,0,0" VerticalAlignment="Top"/>


    </Grid>
</Window>
