<Window x:Class="MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Word Counter" Height="300" Width="442" WindowStartupLocation="CenterScreen">
    <Grid>
        <Label Content="Enter some text for counting" HorizontalAlignment="Left" Margin="8,8,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtWords" HorizontalAlignment="Left" Height="190" Margin="8,39,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="390" VerticalScrollBarVisibility="Visible" AcceptsReturn="True"/>
        <Label Content="Enter some text for counting" HorizontalAlignment="Left" Margin="8,8,0,0" VerticalAlignment="Top"/>
        <RadioButton x:Name="radCountChars" Content="Chars" HorizontalAlignment="Left" Margin="10,244,0,0" VerticalAlignment="Top" IsChecked="True"/>
        <RadioButton x:Name="radCountWords" Content="Words" HorizontalAlignment="Left" Margin="95,244,0,0" VerticalAlignment="Top"/>
        <Label Content="The results are:" HorizontalAlignment="Left" VerticalAlignment="Top" Width="142" Margin="178,239,0,0"/>
        <Label x:Name="lblResults" Content="" HorizontalAlignment="Left" Margin="295,239,0,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
